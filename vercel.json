{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/usgs",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/openaq",
      "schedule": "*/15 * * * *"
    }
  ]
}

